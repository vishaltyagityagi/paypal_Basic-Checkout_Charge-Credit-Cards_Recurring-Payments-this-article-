%section#course-content
  %section#ruby
    %section.detailed-syllabus
      .wrapper-inside
        %h3.title Course invoice
      .columns.clearfix
        .left{style: "padding-left:100px;"}
          %p#notice= notice
          %p
            %strong Course:
            = @registration.course.name
          %p
            %strong Price:
            $#{@registration.course.price}
          %p
            %strong Full name:
            = @registration.full_name
          %p
            %strong Company:
            = @registration.company
          %p
            %strong Email:
            = @registration.email
          %p
            %strong Telephone:
            = @registration.telephone
          %p
            %strong Payment status:
            = @registration.status
          %p
            %strong Payment date:
            = @registration.purchased_at
          %p
            %strong Paypal Transaction Idetifier:
            = @registration.transaction_id



          

          - if notice
            %p#notice{style: "background-color: lightgreen;padding: 5px;"}= notice
          - if alert
            %p#alert{style: "background-color: lightpink;padding: 5px;"}= alert
            %p
            %strong Payment method:
            = @registration.payment_method.capitalize
            - if @registration.payment_method == "paypal"
              %p
              %strong Payment status:
              = @registration.status
              %p
              %strong Paypal Transaction Identifier:
              = @registration.transaction_id
          - else
            %p
            - if @registration.course.recurring
              %strong Profile Idetntifier:
              = @registration.card.card_transaction.params["profile_id"]
            - else
              %strong Transaction Identifier:
              = @registration.card.card_transaction.params["transaction_id"]



